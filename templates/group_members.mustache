{{!
    @template block_group_members/group_members

    This template renders a simple progress bar.

    Example context (json):
    {
        "members": [ {
            "name": "Group name",
            "description": "Bla blah blah...",
            "messagecount": 5,
            'memberscount': 5,
            'link': 'https://',
            }
        ]
    }
}}

<div id="block-group-members-{{uniqid}}" class="block-group-members container box-shadow">
    {{#members}}
        <div class="box px-3 rounded row">
            <div class="pt-2 col-2">
                {{{picture}}}
            </div>
            <div class="pt-2 col">
                {{fullname}}
            </div>
        </div>
    {{/members}}
    {{#morelink}}
        <div class="box px-3 row">
            <div class="pt-2 col">
                <a href="{{morelink}}">{{#str}}displayall, block_group_members{{/str}}</a>
            </div>
        </div>
    {{/morelink}}
</div>
